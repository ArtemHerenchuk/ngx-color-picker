{
  "name": "ngx-color-picker-example",
  "description": "Example app for the ngx-color-picker",
  "private": true,
  "license": "MIT",
  "version": "7.0.0",
  "tslint": {
    "extends": "./tslint.json"
  },
  "stylelint": {
    "extends": "./stylelint.json"
  },
  "scripts": {
    "start": "ng serve",
    "clean": "rm -rf dist",
    "lint": "npm run lint:ts && npm run lint:css",
    "build": "rm -rf dist/* && npm run build:aot",
    "deploy": "npm run clean && deploy-to-git",
    "lint:ts": "tslint \"src/**/*.ts\"",
    "lint:css": "stylelint \"src/**/*.css\"",
    "build:aot": "webpack --config config/webpack-build-aot.config.js",
    "build:jit": "webpack --config config/webpack-build-jit.config.js",
    "serve:sjs": "lite-server -c config/lite-server-bs-config.js",
    "serve:wds": "webpack-dev-server --open --inline --config config/webpack-server-jit.config.js"
  },
  "config": {
    "deployToGit": {
      "repository": "git@github.com:zefoy/ngx-color-picker.git",
      "branch": "gh-pages",
      "folder": "dist",
      "script": "npm run build",
      "commit": "Publishing $npm_package_version",
      "user": {
        "name": "ZEF Devel",
        "email": "devel@zef.fi"
      }
    }
  },
  "dependencies": {
    "@angular/cdk": "^8.0.0",
    "@angular/common": "^8.0.0",
    "@angular/compiler": "^8.0.0",
    "@angular/core": "^8.0.0",
    "@angular/flex-layout": "7.0.0-beta.23",
    "@angular/forms": "^8.0.0",
    "@angular/platform-browser": "^8.0.0",
    "@angular/platform-browser-dynamic": "^8.0.0",
    "core-js": "^3.1.0",
    "ngx-color-picker": "^7.2.0",
    "rxjs": "^6.5.0",
    "zone.js": "^0.9.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.800.0",
    "@angular/cli": "^8.0.0",
    "@angular/compiler-cli": "^8.0.0",
    "@ngtools/webpack": "^8.0.0",
    "@types/node": "^10.14.0",
    "codelyzer": "^5.1.0",
    "connect-history-api-fallback": "^1.6.0",
    "copy-webpack-plugin": "^5.0.0",
    "deploy-to-git": "^0.1.0",
    "html-webpack-plugin": "^3.2.0",
    "lite-server": "^2.5.0",
    "plugin-typescript": "^8.0.0",
    "raw-loader": "^1.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.0",
    "systemjs": "^0.21.0",
    "tslint": "^5.17.0",
    "typescript": "~3.4.0",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.7.0"
  }
}
